<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gmasters.gametrend.game.gameDAO" >
	<select id="paginglist" resultType="gamedto">
		select @rownum := @rownum+1 as no, gameNo, name, genre1, rating, thumbnail 
		from game where (@rownum:=0)=0 and platform='pc' order by rating desc limit
		<foreach collection="array" item="num" separator=",">
			#{num}
		</foreach>
	</select>
	
